{
  "name": "clovers/clover",
  "keywords": ["cms", "php", "PHP Framework" ],
  "description": "Clover - 为速度而生的 PHP 框架",
  "version": "3.0.0-dev",
  "type": "project",
  "homepage": "http://doc.mengniang.tv/clover/1268895",
  "license": "MIT",
  "authors": [
    {
      "name": "Donghai Chen",
      "email": "chendonghai888@gmail.com",
      "homepage": "https://blog.mengniang.tv",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-json": "*",
    "php": "^7.2.5",
    "filp/whoops": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/app/",
      "Clover\\": "src/framework/src"
    },
    "files": [
      "src/framework/src/helpers.php"
    ]
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.phpcomposer.com"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "start": [
      "@php -S localhost:8888 -t public"
    ]
  }
}
